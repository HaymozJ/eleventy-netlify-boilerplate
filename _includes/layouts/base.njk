<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

{% include "components/head.njk" %}

<body>

<header>
    {% include "components/nav.njk" %}

    {% if headerImage %}
        <div class="headerImage" style='background-image: url({{ headerImage }} )'>

           <h1> {{ title }}</h1>
        </div>
    {% elif Carousel %}
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ Carousel.img1 }}" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ Carousel.img2 }}" alt="Second slide">
                </div>
            </div>
        </div>

    {% endif %}

</header>

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-1">
                {{ layoutContent | safe }}
            </div>
        </div>
    </div>
</main>

{% include "components/footer.njk" %}

</body>

</html>
